<% if current_user_can_edit?(photo) %>
  <% delete_photo_btn = link_to("Удалить", event_photo_path(photo.event, photo), method: :delete, data: {confirm: t('.destroy_confirm')}, class: "btn btn-danger") %>
<% end %>

  <%= link_to image_tag(photo.photo.thumb.url), 
      photo.photo.url, 
      data: { toggle: "lightbox",
              gallery: "event-gallery",
              title: "Добавил: #{render partial: 'users/user', object: photo.user }",
              footer: delete_photo_btn } %>
  
