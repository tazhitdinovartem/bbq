<%- if controller_name != 'sessions' %>
  <div><%= link_to "#{t('links.have_account')}", new_session_path(resource_name) %></div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div><%= link_to "#{t('links.signup')}", new_registration_path(resource_name) %></div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div><%= link_to "#{t('links.forget_password?')}", new_password_path(resource_name) %></div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div><%= link_to "#{t('links.receive_confirmation')}", new_confirmation_path(resource_name) %></div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div><%= link_to "#{t('links.unlock_instructions')}", new_unlock_path(resource_name) %></div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div><%= link_to "#{t('links.sign_in_with')} #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %></div>
  <% end %>
<% end %>
