<%= simple_form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

  <% unless user_signed_in? %>
    <%= f.input :user_name, label: t('activerecord.attributes.user.name') %>
    <%= f.input :user_email, label: t('activerecord.attributes.user.email') %>
  <% end %>

  <%= f.submit t('buttons.subscribe'), class: 'btn btn-primary' %>
<% end %>